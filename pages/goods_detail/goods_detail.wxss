/* pages/goods_detail/goods_detail.wxss */
page {
  margin-bottom: 88rpx;
}

.detail-swiper swiper {
  height: 320px;
}

.detail-swiper image {
  display: block;
  width: 300px;
  margin: 0 auto;
}

.info::after {
  content: '';
  display: block;
  height: 15rpx;
  margin-top: 30rpx;
  background-color: rgba(173, 173, 173, 0.5);
}

.info .price {
  color: var(--themeColor);
  font-size: 36rpx;
  padding: 20rpx;
}

.info .desc {
  display: flex;
  padding: 0 20rpx;
}

.info .desc .title {
  flex: 5;
  font-size: 30rpx;
  height: 72rpx;
  line-height: 36rpx;
  padding-right: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.info .desc .collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1px solid #000;
  font-size: 28rpx;
}

.info .desc .collect .iconfont,
.info .desc .collect .text {
  font-size: 28rpx;
}

.info .desc .collect-active .iconfont {
  color: #ff3f78;
}

.image-info .title {
  font-size: 32rpx;
  color: var(--themeColor);
  font-weight: 600;
  padding: 20rpx;
  letter-spacing: 0.05em;
}

.goods-action {
  background-color: #fff;
  position: fixed;
  bottom: 0;
  display: flex;
  width: 100vw;
  height: 88rpx;
  text-align: center;
}

.goods-action .goods-action-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}

.goods-action .goods-action-item button {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  opacity: 0;
}

.goods-action .goods-action-item .iconfont {
  font-size: 34rpx;
}

.goods-action .contact,
.goods-action .share,
.goods-action .cart {
  flex: 1;
  background-color: #fff;
}

.goods-action .add-cart,
.goods-action .buy {
  flex: 2;
  color: #fff;
}

.goods-action .add-cart {
  background-color: #f5c02f;
}

.goods-action .buy {
  background-color: var(--themeColor);
}
